node {
    checkout scm 
    /* .. snip .. */
}

pipeline {
    agent any


    stages {
        stage('Build') {
            steps {
                sh 'rm -rf /var/www/target/' 
                copyArtifacts(projectName: 'petclinic-freestyle', selector: lastSuccessful(), target: '/var/www/target/', fingerprintArtifacts: true);
                sh 'mv /var/www/target/spring-petclinic-*.jar /var/www/target/spring-petclinic-prod.jar'
                sh 'sudo systemctl restart petclinic'
            }
        }
    }
}